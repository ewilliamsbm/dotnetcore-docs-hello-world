@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .appreciation-container {
        text-align: center;
        margin-top: 50px;
    }
    .appreciation-image {
        max-width: 100%;
        height: auto;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Hello World from poplar cafe</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">beyond breakfast</a>.</p>
    <hr />
    <div>Host operating system: @Model.OSVersion</div>
</div>

<div class="appreciation-container">
    <h2>Happy Wednesday happy beyond breakfast day</h2>
    <p>We appreciate the delicious meals provided by Beyond Breakfast. Their dedication to quality and taste is unmatched!</p>
    <img class="appreciation-image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/28/Full_English_breakfast.jpg/220px-Full_English_breakfast.jpg" alt="Full English Breakfast">
</div>
