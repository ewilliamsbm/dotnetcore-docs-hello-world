    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            var pl500Image = $('#pl500Image');
            var germanFlag = $('#germanFlag');
            var container = $('#floatingImageContainer');

            var screenHeight = $(window).height();
            var screenWidth = $(window).width();

            var bounceDistance = 50;
            var animationDuration = 200; // Decreased animation duration for faster movement

            function getRandomPosition() {
                var top = Math.random() * (screenHeight - pl500Image.height());
                var left = Math.random() * (screenWidth - pl500Image.width());
                return { top: top, left: left };
            }

            function getRandomSize() {
                var size = Math.random() * 100 + 100; // Random size between 100px and 200px
                return size;
            }

            function bounceImage(image) {
                var position = getRandomPosition();
                var size = getRandomSize();
                image.animate({
                    top: position.top,
                    left: position.left,
                    width: size,
                    height: size
                }, animationDuration, 'swing', function() {
                    detectCollision();
                    bounceImage(image);
                });
            }

            function detectCollision() {
                var pl500Position = pl500Image.position();
                var germanFlagPosition = germanFlag.position();

                var pl500CenterX = pl500Position.left + pl500Image.width() / 2;
                var pl500CenterY = pl500Position.top + pl500Image.height() / 2;

                var germanFlagCenterX = germanFlagPosition.left + germanFlag.width() / 2;
                var germanFlagCenterY = germanFlagPosition.top + germanFlag.height() / 2;

                var distanceX = Math.abs(pl500CenterX - germanFlagCenterX);
                var distanceY = Math.abs(pl500CenterY - germanFlagCenterY);

                if (distanceX < (pl500Image.width() / 2 + germanFlag.width() / 2) && distanceY < (pl500Image.height() / 2 + germanFlag.height() / 2)) {
                    // Collision detected
                    pl500Image.stop().animate({ left: '-=50', top: '-=50' }, 100);
                    germanFlag.stop().animate({ left: '+=50', top: '+=50' }, 100);
                }
            }

            bounceImage(pl500Image); // Start bouncing PL500 image
            bounceImage(germanFlag); // Start bouncing German flag image
        });
    </script>
