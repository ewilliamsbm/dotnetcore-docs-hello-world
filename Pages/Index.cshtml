    <script>
        $(document).ready(function() {
            var images = $('.floatingImage');
            var container = $('#floatingImageContainer');

            var screenHeight = $(window).height();
            var screenWidth = $(window).width();

            var bounceDistance = 50;
            var animationDuration = 200; // Decreased animation duration for faster movement

            function getRandomPosition() {
                var top = Math.random() * (screenHeight - $(this).height());
                var left = Math.random() * (screenWidth - $(this).width());
                return { top: top, left: left };
            }

            function getRandomSize() {
                var size = Math.random() * 100 + 100; // Random size between 100px and 200px
                return size;
            }

            function bounceImage(image) {
                var position = getRandomPosition.call(image);
                var size = getRandomSize();
                image.animate({
                    top: position.top,
                    left: position.left,
                    width: size,
                    height: size
                }, animationDuration, 'swing', function() {
                    bounceImage(image);
                });
            }

            images.each(function() {
                bounceImage($(this));
            });
        });
