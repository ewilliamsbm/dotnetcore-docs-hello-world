@page
@model IndexModel
@{    
    ViewData["Title"] = "Home page";
}

<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden; /* Prevent scrolling */
        font-family: Arial, sans-serif;
    }
    canvas {
        display: block;
        margin: 0 auto;
        background-image: url('https://upload.wikimedia.org/wikipedia/en/thumb/2/27/Bliss_%28Windows_XP%29.png/270px-Bliss_%28Windows_XP%29.png');
        background-size: cover;
    }
    #score {
        text-align: center;
        font-size: 24px;
        color: #fff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }
    #title {
        text-align: center;
        font-size: 36px;
        color: #fff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        margin-bottom: 20px;
    }
</style>

<div id="title">FLAPPY COLEMAN</div>
<canvas id="gameCanvas" width="480" height="640"></canvas>
<div id="score">Score: <span id="scoreValue">0</span></div>

<script>
    // Get the canvas element and its context
    var canvas = document.getElementById("gameCanvas");
    var ctx = canvas.getContext("2d");

    // Define player image
    var playerImg = new Image();
    playerImg.onload = function () {
        draw();
    };
    playerImg.src = "https://i.ibb.co/T4f35nc/matthew.png";

    // Define pipe properties
    var pipeGap = 200; // Gap between pipes
    var minPipeHeight = 100; // Minimum height of pipe entrance
    var pipeWidth = 50;
    var pipes = [];
    var pipeSpeed = 2;
    var maxPipes = 3; // Maximum number of visible pipes
    var pipeInterval = 120; // Interval between pipes

    // Gravity
    var gravity = 0.5;

    // Score
    var score = 0;

    // Define game loop function
    function draw() {
        // Clear canvas
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // Draw player
        ctx.drawImage(playerImg, 50, canvas.height / 2 - 25, 50, 50);

        // Draw pipes
        // ...

        // Draw score
        ctx.fillStyle = "#ffffff";
        ctx.font = "24px Arial";
        ctx.fillText("Score: " + score, 10, 30);

        // Request animation frame
        requestAnimationFrame(draw);
    }

    // Start the game loop
    draw();
</script>
